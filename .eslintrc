{
  "env": {
    "es6": true,
    "node": true,
    "mocha": true
  },
  "extends": "eslint:recommended",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module"
  },
  "rules": {
    "arrow-parens": "off",
    "generator-star-spacing": "off",
    "semi": ["error", "always"],
    "indent": "off",
    "space-before-function-paren": "off",
    "new-cap": "off",
    "eol-last": "off",
    "no-multiple-empty-lines": [1, { "max": 2 }],
    "camelcase": "off",
    "no-console": "off"
  }
}